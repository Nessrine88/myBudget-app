<h1>Cards#show</h1>
<p>Find me in app/views/cards/show.html.erb</p>

<% @order_items.each do |item| %>
  <h3><%= item.product.title %></h3>
  <p>Price: <%= item.product.price %></p>
  <%= form_for item do |f|%>
    <%= f.hidden_field :product_id ,:value=> item.product.id%>
    <%= f.number_field :quantity ,:value=> item.quantity.to_i%>
    <%= f.submit "Update Card"%>
    <%=link_to "Remove Item", order_item_path(item), method: :delete, remote: true%>
    <% end %>
<h2> subtotal <%= item.total %>
<% end %>

<h3>  Your current card value has a subtotal of : <%= current_order.subtotal%></h3>

