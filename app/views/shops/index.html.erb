<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <%= form_for @order_item do |f|%>
      <%= f.hidden_field :product_id, :value => product.id%>
      <%= f.number_field :quantity, :value=>1, :min=>1%>
      <%= f.submit "Add to Card"%>
      <%end%>
      <p>
      <%= link_to "Show this product", shop_path(product) %>
    </p>
  <% end %>


</div>

<div id= "card">

<%= link_to "#{current_order.order_items.size} item with a value of #{current_order.subtotal}$", cards_path%>
</div>
